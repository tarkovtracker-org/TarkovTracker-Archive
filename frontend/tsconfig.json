{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    // Frontend-specific settings
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "noEmit": true,
    "allowJs": true,
    "types": ["vitest/globals"],
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "vite.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ]
}
