{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    // Frontend-specific settings
    // Target is intentionally pinned to ES2020 to match our browser/runtime compatibility needs while the `lib`
    // entry still includes ESNext so newer APIs stay type-safe and Vite handles any necessary polyfills.
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "noEmit": true,
    "allowJs": true,
    "types": ["vitest/globals"],
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "vite.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "src/vite-env.d.ts"
  ]
}
