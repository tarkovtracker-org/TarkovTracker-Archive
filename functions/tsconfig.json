{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    // Functions-specific settings
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "lib",
    "removeComments": false,
    "composite": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "lib"]
}
