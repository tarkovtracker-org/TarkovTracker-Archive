{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    // Functions-specific settings
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "lib",
    "rootDir": "src",
    "removeComments": false,
    "composite": true,
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib", "test/**/*.ts"]
}
