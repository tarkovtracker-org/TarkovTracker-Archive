# Project Configuration
GCLOUD_PROJECT=tarkovtracker-test
NODE_ENV=test

# Firebase Emulator Connections
FIRESTORE_EMULATOR_HOST=127.0.0.1:5002
FIREBASE_AUTH_EMULATOR_HOST=127.0.0.1:9099
FIREBASE_STORAGE_EMULATOR_HOST=127.0.0.1:9199

# Feature Flags (All disabled for stable tests)
FEATURE_ERROR_HANDLING=false
FEATURE_PROGRESS_SERVICE=false
FEATURE_TEAM_SERVICE=false
FEATURE_TOKEN_SERVICE=false

# Rate Limiting (Relaxed for tests)
ABUSE_GUARD_WINDOW_MS=1000
ABUSE_GUARD_THRESHOLD=100
ABUSE_GUARD_WARN_RATIO=0.9
ABUSE_GUARD_BREACH_LIMIT=10
ABUSE_GUARD_HISTORY_RESET_MS=5000
ABUSE_GUARD_METHODS=POST
ABUSE_GUARD_PATH_PREFIXES=/api/progress
ABUSE_GUARD_COLLECTION=rateLimitEvents

# External Network (Disabled for tests)
TARKOV_DEV_BASE_URL=http://127.0.0.1:9999
NO_EXTERNAL_NETWORK=1